[Unit]
Description=Noxbit torrenttv
After=syslog.target
After=network.target
#Requires=
#Wants=

[Service]
# Пожалуйста, как только починят работу НЕ под рутом, поменяйте пользователя на ользователя с пониженными привилегиями, типа nobody:nogroup итп.

User=root
Group=root


WorkingDirectory=/opt/noxbit/
#Environment=RACK_ENV=production

OOMScoreAdjust=-100

Restart=always
RestartSec=5


ExecStart=/opt/noxbit/STM-Hypervisor  -config=/opt/noxbit/noxbit.cfg 

#ExecStop=/usr/local/bin/bundle exec service -S /work/www/myunit/shared/tmp/pids/service.state stop
#ExecReload=/usr/local/bin/bundle exec service -S /work/www/myunit/shared/tmp/pids/service.state restart
#TimeoutSec=30


[Install]
WantedBy=multi-user.target 
